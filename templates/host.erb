
# <%= @name %>
define host {
  use <%= scope.lookupvar("nagioscfg::host_template") %>
  host_name <%= @name %>
  alias <%= @name %>
<% if @action_url %>  action_url <%= @action_url %><% end %>
<% if @host_ips %>  address <%= @host_ips %><% end %>
<% if @parents %>  parents <%= @parents %><% end %>
<% if @default_host_group %>  hostgroups <%= @default_host_group %><% end %>
}
